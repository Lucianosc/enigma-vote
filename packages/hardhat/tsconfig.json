{
  "compilerOptions": {
      "noImplicitAny": true,
      "resolveJsonModule": true,
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "outDir": "dist",
      "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["tasks/**/*", "test/**/*", "typechain-types/**/*"],
  "files": ["./hardhat.config.ts"]
}
